{
  "name": "typopo-vscode",
  "displayName": "Typopo",
  "description": "Fix frequent microtypography errors in multiple languages in VS Code with Typopo. Write neat texts without bothering about typography rules. Typopo works for English, German, Slovak, Czech and Rusyn language.",
  "version": "1.4.5",
  "publisher": "brano",
  "icon": "assets/typopo--logotype--128.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "sponsor": {
    "url": "https://ko-fi.com/branosandala"
  },
  "keywords": [
    "typopo-vscode",
    "microtypography",
    "typography",
    "typos",
    "typo",
    "English",
    "German",
    "Slovak",
    "Czech",
    "Rusyn",
    "keybindings"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/surfinzap/typopo-vscode.git"
  },

  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "typopo-vscode.fixTypos",
        "title": "Fix Typos",
        "category": "Typopo"
      }
    ],
    "keybindings": [
      {
        "command": "typopo-vscode.fixTypos",
        "key": "ctrl+alt+T",
        "mac": "ctrl+cmd+T",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Typopo",
      "properties": {
        "typopo.language": {
          "type": "string",
          "enum": [
            "en-us",
            "de-de",
            "cs",
            "rue",
            "sk"
          ],
          "enumDescriptions": [
            "English (US) (en-us)",
            "German (de-de)",
            "Czech (cs)",
            "Rusyn (rue)",
            "Slovak (sk)"
          ],
          "default": "en-us",
          "description": "Select a default language to fix typos"
        },
        "typopo.removeLines": {
          "type": "boolean",
          "default": false,
          "description": "Remove empty lines between paragraphs"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src/**/*.ts"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/vscode": "^1.108.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "typopo": "^2.9.1"
  }
}
