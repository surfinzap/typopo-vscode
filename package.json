{
  "name": "typopo-vscode",
  "displayName": "Typopo",
  "description": "Fix frequent microtypography errors in multiple languages in VS Code with Typopo. Write neat texts without bothering about typography rules. Typopo works for English, German, Slovak, Czech and Rusyn language.",
  "version": "2.0.0",
  "publisher": "brano",
  "icon": "assets/typopo--logotype--128.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "sponsor": {
    "url": "https://ko-fi.com/branosandala"
  },
  "keywords": [
    "typopo-vscode",
    "microtypography",
    "typography",
    "typos",
    "typo",
    "English",
    "German",
    "Slovak",
    "Czech",
    "Rusyn",
    "keybindings"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/surfinzap/typopo-vscode.git"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "typopo-vscode.fixTypos",
        "title": "Fix Typos",
        "category": "Typopo"
      }
    ],
    "keybindings": [
      {
        "command": "typopo-vscode.fixTypos",
        "key": "ctrl+alt+T",
        "mac": "ctrl+cmd+T",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Typopo",
      "properties": {
        "typopo.language": {
          "type": "string",
          "enum": [
            "en-us",
            "de-de",
            "cs",
            "rue",
            "sk"
          ],
          "enumDescriptions": [
            "English (US) (en-us)",
            "German (de-de)",
            "Czech (cs)",
            "Rusyn (rue)",
            "Slovak (sk)"
          ],
          "default": "en-us",
          "description": "Select a default language to fix typos"
        },
        "typopo.removeLines": {
          "type": "boolean",
          "default": false,
          "description": "Remove empty lines between paragraphs"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:ui": "vitest --ui",
    "test:integration": "npm run build && node ./out/test/integration/run-integration-tests.js",
    "pretest": "pnpm run build && pnpm run lint",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --check \"src/**/*.ts\" \"*.config.{ts,mjs,js}\" \"*.json\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"*.config.{ts,mjs,js}\" \"*.json\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.config.{ts,mjs,js}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@huggingface/prettier-plugin-vertical-align": "^0.2.3",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.10",
    "@types/unist": "^3.0.3",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/ui": "^4.0.18",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "typopo": "^2.9.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.1.0"
  }
}
