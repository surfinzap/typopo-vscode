{
  "name": "typopo-vscode",
  "displayName": "Typopo",
  "description": "Fix frequent microtypography errors in multiple languages in VS Code with Typopo. Write neat texts without bothering about typography rules. Typopo works for English, German, Slovak, Czech and Rusyn language.",
  "version": "2.0.2",
  "publisher": "brano",
  "icon": "assets/typopo--logotype--128.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "sponsor": {
    "url": "https://ko-fi.com/branosandala"
  },
  "keywords": [
    "typopo-vscode",
    "microtypography",
    "typography",
    "typos",
    "typo",
    "English",
    "German",
    "Slovak",
    "Czech",
    "Rusyn",
    "keybindings"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/surfinzap/typopo-vscode.git"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "typopo-vscode.fixTypos",
        "title": "Fix Typos",
        "category": "Typopo"
      }
    ],
    "keybindings": [
      {
        "command": "typopo-vscode.fixTypos",
        "key": "ctrl+alt+T",
        "mac": "ctrl+cmd+T",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Typopo",
      "properties": {
        "typopo.language": {
          "type": "string",
          "enum": [
            "en-us",
            "de-de",
            "cs",
            "rue",
            "sk"
          ],
          "enumDescriptions": [
            "English (US) (en-us)",
            "German (de-de)",
            "Czech (cs)",
            "Rusyn (rue)",
            "Slovak (sk)"
          ],
          "default": "en-us",
          "description": "Select a default language to fix typos"
        },
        "typopo.removeLines": {
          "type": "boolean",
          "default": false,
          "description": "Remove empty lines between paragraphs"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.config.mjs --production",
    "build": "node esbuild.config.mjs --production",
    "build:dev": "tsc -p ./",
    "watch": "node esbuild.config.mjs --watch",
    "watch:tsc": "tsc -watch -p ./",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:ui": "vitest --ui",
    "test:integration": "pnpm run build:dev && node ./out/test/integration/run-integration-tests.js",
    "pretest": "pnpm run build:dev && pnpm run lint",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --check \"src/**/*.ts\" \"*.config.{ts,mjs,js}\" \"*.json\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"*.config.{ts,mjs,js}\" \"*.json\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.config.{ts,mjs,js}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@huggingface/prettier-plugin-vertical-align": "^0.2.4",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.3.0",
    "@types/unist": "^3.0.3",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/ui": "^4.0.18",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^13.0.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "typopo": "^3.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.1.0"
  }
}
