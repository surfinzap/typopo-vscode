{
	"name": "typopo-vscode",
	"displayName": "Typopo",
	"description": "Fix frequent microtypography errors in multiple languages in VS Code with Typopo",
	"version": "0.0.4",
	"publisher": "brano",
	"icon": "assets/typopo--logotype--128.png",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:typopo-vscode.fixTypos"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/surfinzap/typopo-vscode.git"
	},
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "typopo-vscode.fixTypos",
				"title": "Fix Typos",
				"category": "Typopo"
			}
		],
		"keybindings": [
			{
				"command": "typopo-vscode.fixTypos",
				"key": "ctrl+alt+T",
				"mac": "ctrl+cmd+T",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "Typopo",
			"properties": {
				"typopo.language": {
					"type": "string",
					"enum": [
						"en-us",
						"de-de",
						"cs",
						"rue",
						"sk"
					],
					"enumDescriptions": [
						"English (US) (en-us)",
						"German (de-de)",
						"Czech (cs)",
						"Rusyn (rue)",
						"Slovak (sk)"
					],
					"default": "en-us",
					"description": "Select a default language to fix typos"
				},
				"typopo.removeLines": {
					"type": "boolean",
					"default": false,
					"description": "Remove empty lines between paragraphs"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.48.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"typopo": "^2.3.5"
	}
}
